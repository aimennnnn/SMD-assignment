<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#14FFFFFF">  <!-- subtle white ripple -->

    <!-- Content -->
    <item>
        <selector>

            <!-- Pressed / focused -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#454545" />
                    <corners android:radius="24dp" />
                    <stroke android:width="1dp" android:color="#26FFFFFF" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="#454545" />
                    <corners android:radius="24dp" />
                    <stroke android:width="1dp" android:color="#26FFFFFF" />
                </shape>
            </item>

            <!-- Default -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3A3A3A" />
                    <corners android:radius="24dp" />
                    <stroke android:width="1dp" android:color="#1FFFFFFF" />
                </shape>
            </item>

        </selector>
    </item>

    <!-- Optional ripple mask (keeps ripple inside pill) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</ripple>
